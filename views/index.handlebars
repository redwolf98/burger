

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-lg-4 col-md-4">
            <img id="hamburger" src="./assets/images/hamburger.png" alt="hamburger.png">
            <h2 style="text-align: center;">Time To Eat!</h2>
        </div>
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col-lg-3">
            <ul id="undevoured">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg-3">
            <ul id="devoured">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col"></div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col-lg-6 col-md-6" id="submissionForm">
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerName">I'm Hungry For A: </label>
                    <input type="text" id="burgerName" name="burger">
                </div>
                <button class="btn-primary" type="submit">Submit</button>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>